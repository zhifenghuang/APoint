<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_background"
        android:orientation="vertical"
        android:paddingTop="23dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_please_input_your_pay_psw"
            android:textColor="@color/text_color_1"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/etPsw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="23dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/app_please_input_your_pay_psw"
            android:textColorHint="@color/text_color_2"
            android:background="@drawable/shape_ffffff_stroke_cecece_4"
            android:textColor="@color/text_color_6"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="22dp"
            android:alpha="0.2"
            android:background="@color/color_84_84_98"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_cancel"
                android:textColor="@color/text_color_2"
                android:textSize="15dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@color/line" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_sure"
                android:textStyle="bold"
                android:background="@drawable/shape_00a0e9_right_bottom_4"
                android:textColor="@color/text_color_3"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>