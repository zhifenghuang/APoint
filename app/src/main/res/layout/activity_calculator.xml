<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/app_layout_top_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_e8_e7_ff"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp"
                android:text="@string/app_calculator_tip"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/dimen_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_pos_pool_total_pledge_num"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/shape_f8f8f9_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalPledgeNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/app_utg"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_price"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/shape_f8f8f9_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/app_usd_utg"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_pool_pplns_rate"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/shape_f8f8f9_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPPLns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="%"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_pledge_nums"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/shape_f8f8f9_8"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPledgeNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/app_utg"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="36dp"
                android:background="@color/color_f2_f2_f2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_day_income_utg"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDayIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_30" />

                <TextView
                    android:id="@+id/tvToUsdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‰ˆ$ 0"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_14" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>