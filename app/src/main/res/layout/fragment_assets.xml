<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_theme"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAssets"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:background="@drawable/app_assets_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="@string/app_assets_value"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_12" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="23dp"
            android:src="@drawable/app_right_arrow_white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="23dp">

            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="159742.02"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_30"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTotalToUsdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‰ˆ$ 5924.68"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_14" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0_5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_ee_ee_ee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llWithdraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/app_withdraw_white"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_withdraw"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_0_5"
                android:layout_height="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:background="@color/color_ee_ee_ee" />

            <LinearLayout
                android:id="@+id/llCharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/app_charge_white"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_charge"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_e4e5e7_13_top"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/app_static"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/app_statistics"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_stroke_e4e5e7_13_bottom"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/app_first_department_performance"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_9"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/app_second_department_performance"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_9"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/app_third_department_performance"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_9"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFirstNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tvSecondNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tvThirdNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>