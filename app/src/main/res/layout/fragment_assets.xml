<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5_f5_f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/app_top_bg_2"
        android:paddingLeft="15dp"
        android:paddingBottom="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="1dp"
            android:text="@string/app_wallet_center"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_18"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:paddingRight="21dp"
            android:src="@drawable/app_mark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAssets"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:background="@drawable/app_assets_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="@string/app_assets_value"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_12" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="23dp"
            android:src="@drawable/app_right_arrow_white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="23dp">

            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="159742.02"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_30"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTotalToUsdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‰ˆ$ 5924.68"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_14" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0_5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_ee_ee_ee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llWithdraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/app_withdraw_white"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_withdraw"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_0_5"
                android:layout_height="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:background="@color/color_ee_ee_ee" />

            <LinearLayout
                android:id="@+id/llCharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/app_charge_white"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_charge"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="16dp" />

</LinearLayout>