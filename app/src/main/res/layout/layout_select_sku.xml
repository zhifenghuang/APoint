<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_ffffff_15_top"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/ivGoods"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:round="@dimen/dimen_4" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/ivGoods"
                android:singleLine="true"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivGoods"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/ivGoods"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_17" />

                <TextView
                    android:id="@+id/tvPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="1dp"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_12" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/app_category"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_14"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/app_num"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivReduce"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/app_reduce" />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shape_f2f2f2_10"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/app_add" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="127dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_f2f2f2_22"
                android:gravity="center"
                android:text="@string/app_cancel"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="127dp"
                android:layout_height="44dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/shape_00a0e9_22"
                android:gravity="center"
                android:text="@string/app_ok"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_14" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>