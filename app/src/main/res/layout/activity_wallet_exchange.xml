<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_theme"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/app_layout_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_e4_e5_e7" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/color_24_24_2d"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/ivFromSymbol"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_assets_uaa" />

            <TextView
                android:id="@+id/tvFromSymbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="@string/app_uaa"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_19" />

            <ImageView
                android:id="@+id/ivToSymbol"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_assets_integral" />


            <TextView
                android:id="@+id/tvToSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="7dp"
                android:text="@string/app_a_points"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_19" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59dp"
            android:src="@drawable/app_switch"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:paddingLeft="14dp"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_10" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="113dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="27dp">


            <EditText
                android:id="@+id/etFromValue"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/app_out_num"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />


            <TextView
                android:id="@+id/tvToValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/app_in_num"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_2"
                android:textSize="@dimen/dimen_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="155dp"
            android:layout_marginRight="14dp"
            android:alpha="0.08"
            android:background="@color/color_5e_5e_5e" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/app_reference_exchange_rate"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_12" />


            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_11"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvSureExchange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="202dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_common_disable_btn_8"
            android:gravity="center"
            android:text="@string/app_ok"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="@dimen/dimen_12"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:textColor="@color/text_color_1"
        android:textSize="12dp" />


</LinearLayout>