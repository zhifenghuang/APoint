<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">


    <TextView
        android:id="@+id/tvNum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/dimen_13" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="@dimen/dimen_12" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableRight="@drawable/app_right_arrow_blue"
        android:drawablePadding="3.5dp"
        android:gravity="center_vertical|right"
        android:text="@string/app_freeze_right_now"
        android:textColor="@color/text_color_5"
        android:textSize="@dimen/dimen_12"
        android:textStyle="bold" />

</LinearLayout>