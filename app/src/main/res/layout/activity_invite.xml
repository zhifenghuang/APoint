<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_theme"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">


    <include layout="@layout/app_layout_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:layout_marginTop="72dp"
        android:background="@color/color_e4_e5_e7" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:paddingLeft="15dp"
        android:text="@string/app_current_identity"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/dimen_13"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_stroke_ed3142_13"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="145dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tvIdentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_10" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_7"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/dimen_11" />

        </LinearLayout>




    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/app_invite_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_stroke_e4e5e7_13"
        android:paddingLeft="23dp"
        android:paddingTop="17dp"
        android:paddingRight="25dp"
        android:paddingBottom="35dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/app_qrcode"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/app_invite_link"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_13"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="56dp"
            android:layout_height="46dp"
            android:layout_below="@id/tv1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_common_btn_7"
            android:gravity="center"
            android:text="@string/app_copy"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/tv1"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tvCopy"
            android:background="@drawable/shape_stroke_e4e5e7_7"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_15" />

    </RelativeLayout>


</RelativeLayout>