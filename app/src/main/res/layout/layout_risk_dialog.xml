<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_background"
        android:orientation="vertical"
        android:paddingTop="30dp">


        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:text="@string/app_risk_content"
            android:textColor="@color/text_color_1"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:src="@drawable/app_not_choose"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingRight="40dp"
                android:text="@string/app_risk_agreement"
                android:textColor="@color/text_color_1"
                android:textSize="15dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvOk"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="33dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_ededed_9"
            android:gravity="center"
            android:text="@string/app_sure"
            android:textColor="@color/text_color_4"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>