<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDefaultIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_address_default" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_18" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/fl"
        android:orientation="horizontal"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="8dp"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tvDefault"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_12"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/shape_stroke_00a0e9_2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/app_default"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_8" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fl"
        android:orientation="horizontal"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="30dp"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:src="@drawable/app_edit" />
    </LinearLayout>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/llAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:alpha="0.2"
        android:background="@color/color_84_84_98"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingRight="13dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivDefault"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/app_default" />

        <TextView
            android:id="@+id/tvDefault2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:gravity="center"
            android:text="@string/app_default_address"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_12" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/app_delete"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/llEdit"
        android:alpha="0.2"
        android:background="@color/color_84_84_98"
        android:visibility="gone" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/llAddress"
        android:layout_marginTop="14dp"
        android:alpha="0.2"
        android:background="@color/color_84_84_98" />


</RelativeLayout>