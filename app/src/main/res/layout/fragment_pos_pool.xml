<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_f8f8f9_8"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/app_join_pos_pool"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_18" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="@dimen/dimen_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_ff_ff_ff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etNums"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/app_please_input_nums"
                        android:inputType="numberDecimal"
                        android:paddingLeft="27dp"
                        android:paddingRight="27dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color_1"
                        android:textColorHint="@color/text_color_4"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_e7_e7_e7" />

                    <TextView
                        android:layout_width="59dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/app_utg"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_19" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_pledge_num"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/tvPledgeNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 UTG"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvPledge"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_6961f3_9"
                android:gravity="center"
                android:text="@string/app_pledge"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llProtocol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/app_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="@string/app_i_agree"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/tvProtocol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/app_pool_pledge_protocol"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_12" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_f8f8f9_8"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/app_quit_pos_pool"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_18" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="@dimen/dimen_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_ff_ff_ff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etQuitNums"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/app_please_input_nums"
                        android:inputType="numberDecimal"
                        android:paddingLeft="27dp"
                        android:paddingRight="27dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color_1"
                        android:textColorHint="@color/text_color_4"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_e7_e7_e7" />

                    <TextView
                        android:layout_width="59dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/app_utg"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_19" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_pledge_num"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/tvPledgeNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 UTG"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dimen_15" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvQuit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_00000000_9_stroke_fb4e4e_1"
                android:gravity="center"
                android:text="@string/app_cancel_pledge"
                android:textColor="@color/color_fb_4e_4e"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llProtocol2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/app_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="@string/app_i_agree"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/tvProtocol2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/app_pool_pledge_protocol"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>