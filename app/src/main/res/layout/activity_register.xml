<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_theme"
    android:orientation="vertical">

    <include layout="@layout/app_layout_top_bar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_30"
                android:text="@string/app_email"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_15" />


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_f6f6f6_8"
                android:gravity="center_vertical"
                android:hint="@string/app_please_input_email"
                android:paddingLeft="@dimen/dimen_21"
                android:paddingRight="@dimen/dimen_21"
                android:singleLine="true"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_4"
                android:textSize="@dimen/dimen_16" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_f6f6f6_8"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etEmailVerifyCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/app_please_input_email_verify_code"
                    android:paddingLeft="@dimen/dimen_21"
                    android:singleLine="true"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="@color/text_color_4"
                    android:textSize="@dimen/dimen_16" />

                <TextView
                    android:id="@+id/tvSendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:text="@string/app_send_code"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_16" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_25"
                android:text="@string/app_invite_code"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_15" />


            <EditText
                android:id="@+id/etInviteCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_f6f6f6_8"
                android:gravity="center_vertical"
                android:hint="@string/app_please_input_invite_code"
                android:paddingLeft="@dimen/dimen_21"
                android:paddingRight="@dimen/dimen_21"
                android:singleLine="true"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_4"
                android:textSize="@dimen/dimen_16" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_25"
                android:text="@string/app_password"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_f6f6f6_8"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPsw1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/app_password_suggest"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dimen_21"
                    android:singleLine="true"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="@color/text_color_4"
                    android:textSize="@dimen/dimen_16" />

                <ImageView
                    android:id="@+id/ivEye1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:src="@drawable/app_eye_close" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_25"
                android:text="@string/app_sure_password"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_f6f6f6_8"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPsw2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/app_please_input_psw_again"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dimen_21"
                    android:singleLine="true"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="@color/text_color_4"
                    android:textSize="@dimen/dimen_16" />

                <ImageView
                    android:id="@+id/ivEye2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:src="@drawable/app_eye_close" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="16dp"
                    android:src="@drawable/app_unselected" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_i_had_read_agree"
                    android:textColor="@color/text_color_2"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/tvProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/app_user_protocol"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/dimen_12" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/shape_common_disable_btn_8"
                android:gravity="center"
                android:text="@string/app_create_a_account"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/dimen_17" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>