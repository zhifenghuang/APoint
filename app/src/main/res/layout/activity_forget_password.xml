<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_theme"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/app_layout_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/line" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_40"
        android:text="@string/app_email"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/dimen_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/shape_f6f6f6_8"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dimen_14">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/app_please_input_email"
            android:paddingLeft="@dimen/dimen_17"
            android:paddingRight="@dimen/dimen_17"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_4"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/app_check"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/shape_f6f6f6_8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEmailVerifyCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/app_please_input_email_verify_code"
            android:paddingLeft="@dimen/dimen_17"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_4"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSendCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="@string/app_send_code"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_25"
        android:text="@string/app_password"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/dimen_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/shape_f6f6f6_8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPsw1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/app_password_suggest"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_17"
            android:paddingRight="@dimen/dimen_3"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_4"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEye1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingRight="@dimen/dimen_14"
            android:src="@drawable/app_eye_close" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/shape_f6f6f6_8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPsw2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/app_please_input_psw_again"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_17"
            android:paddingRight="@dimen/dimen_3"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_4"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEye2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingRight="@dimen/dimen_14"
            android:src="@drawable/app_eye_close" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tvOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shape_common_disable_btn_8"
        android:gravity="center"
        android:text="@string/app_ok"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/dimen_16"
        android:textStyle="bold" />


</LinearLayout>