<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="13dp">

    <ImageView
        android:id="@+id/ivGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_202020_2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/app_package"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/dimen_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="2dp"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_17" />

        <TextView
            android:id="@+id/tvPrice2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/shape_ed3142_14"
            android:gravity="center"
            android:minWidth="83dp"
            android:text="@string/app_buy_right_now"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />


</LinearLayout>